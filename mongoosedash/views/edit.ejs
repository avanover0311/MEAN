<!DOCTYPE html>
<html>
<head>
	<title>Mongoose Dashboard</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
 	<form action='/birds' method="post">
 		<div class="container">
			<h1>Edit Bird</h1>
				<%- JSON.stringify(messages) %> 
				<% if(messages.registration) { %>
				     <% for (var x of messages.registration) { %>
				      <h3><%= x %></h3>
				     <% } %>
				 <% } %>
				<div class="form-group">
				    <label for="exampleFormControlInput1">Name</label>
				    	<input type="text" class="form-control" id="name" name="name">
				</div>
				<div class="form-group">
				    <label for="exampleFormControlTextarea1">Favorite Food</label>
			    		<input type="text" class="form-control" id="food" name="food">
			  	</div>
			  	<div class="form-group">
			  		<button type="submit" class="btn btn-primary">Update Bird</button>
			  	</div>
	</form>
		<form action="/">
			<button type="submit" class="btn btn-secondary">Back to Birds</button>
		</form>
	</div>
</body>
</html>