<!DOCTYPE html>
<html lang="en" dir="ltr">
  	<head>
	    <meta charset="utf-8">
	    <title>Cobra Kai Message Board</title>
	    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  	</head>
	<body>
		<div class="container">
			<% JSON.stringify(messages)%>
			<% if(messages.registration) { %>
			<div class="row">
				<% for (var x of messages.registration) { %>
				<div class="col-4">
				<h3><%= x %></h3>
				</div>
				<% } %>
			</div>
			<% } %>
			<div class="row">
				<h3>In This Dojo...</h3>
			</div>
			<div class="row">
				<h1>No Mercy</h1>
			</div>
			<div class="row">
				<form action="/message" method="post">
					<div class="form-group">
						<label for="name">Name</label><br>
						<input type="text" name="name" placeholder="Name">
					</div>
					<div class="form-group">
						<label for="quote">Message</label><br>
						<textarea name="message"  placeholder="Type Your Message Here"></textarea>
					</div>
					<div class="row"> 
						<button type="submit" class="btn btn-warning" rows="4">Send Your Message</button>
					</div>
	 			</form>
			</div>
				  	<% for(message of all_messages) { %>
			<div class="row">
				<div class="col-3">
					<h4>Name: <%= message.name %></h4>
				</div>
				<div class="col-9">
	    		<h5>Message: <%= message.message%></h5>
				</div>
				<% for(comment of message.comments) { %>
					<div class="col-3">
						<h5>Name: <%= comment.name %></h5>
					</div>
					<div class="col-9">
	    				<p>Comment: <%= comment.comment%></p>
					</div>
				<% } %>
				<div>
					<form action="/message/<%= message._id %>/comment" method="post">
						<div class="form-group">
							<label for="name">Name</label><br>
							<input type="text" name="name" placeholder="Name">
						</div>
						<div class="form-group">
							<label for="comment">Comment</label><br>
							<textarea name="comment" placeholder="Type Your Comment Here"></textarea>
						</div>
						<div class="row"> 
							<button type="submit" class="btn btn-secondary" rows="4">Send Your Comment</button>
						</div>
	 				</form>
	 			</div>
			</div>
	  				<% } %>
		</div>

	</body>
</html>