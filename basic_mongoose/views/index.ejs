<!DOCTYPE html>
<html>
<head>
	<title>Mongoose stuff</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
 	<form action='/quotes' method="post">
 		<div class="container">
			<h1>Quotes</h1>
				<%- JSON.stringify(messages) %> 
				<% if(messages.registration) { %>
				     <% for (var x of messages.registration) { %>
				      <h3><%= x %></h3>
				     <% } %>
				 <% } %>
				<div class="form-group">
				    <label for="exampleFormControlInput1">Name</label>
				    <input type="text" class="form-control" id="name" name="name">
				</div>
				<div class="form-group">
				    <label for="exampleFormControlTextarea1">Comments</label>
			    		<textarea class="form-control" id="quote" name="quote" rows="3"></textarea>
			  	</div>
			  	<div class="form-group">
			  		<button type="submit" class="btn btn-primary">Add my Quote</button>
			  	</div>
	</form>
		<form action="/quotes">
			<button type="submit" class="btn btn-secondary">Skip to Quotes</button>
		</form>
	</div>
</body>
</html>